<%= link_to 'Home', root_path %>
<h1>List all notes</h1>
<%= link_to 'New note', new_note_path %>
<table>
    <thead>
        <tr>
            <th>ID</th>
            <th>Text</th>
            <th>Date</th>
            <th>Category</th>
            <th colspan="2"></th>
        </tr>
    </thead>
    <tbody>
        <% @notes.each do |note| %>
            <tr>
                <td><%= note.id %></td>
                <td><%= note.text %></td>
                <td><%= note.date %></td>
                <td><%= Category.find(note.category_id).name %></td>
                <td><%= link_to 'Show', note_path(note) %></td>
                <td><%= link_to 'Edit', edit_note_path(note) %></td>
                <td><%= link_to 'Destroy', note_path(note),
                    method: :delete,
                    data: { confirm: 'Are you sure?' } %></td>
            </tr>
        <% end %>
    </tbody>
</table>